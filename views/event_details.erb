<header class=event-details-header>
    <h1>Event details</h1><%if logged_in? && current_user.id == @event.user_id%>
    <form action="/events/<%=@event.id%>/edit">
        <button>EDIT EVENT</button>
    </form>    
    <% end %>
</header>
<section class="event-details">

    <h2><%= @event.name%></h2>
    <img src="<%=@event.image_url%>" alt="">
    <p>Date: <%=show_date(@event.date_time)%></p>
    <p>Time: <%=show_time(@event.date_time)%></p>
    <p>Description: <%=@event.description%></p>
    <p>Organised by <a href="/users/<%=@event.user_id%>"><%=@event.user.username%></a></p>

    <p>There are <%= @event.subscribed_users.count%> interested in attending this event</p>

    <%if logged_in?%>
    <form action="/subscribed_users/new" method="post">
        <input type="hidden" name="event_id" value="<%= @event.id%>">
        <input type="hidden" name="user_id" value="<%=current_user.id%>">
        <label for="rsvp_button">If you would like to come please click below</label>
        <button>RSVP</button>
    </form>
    <%else%>
        <form action="/login" class="rsvp">
            <label for="">Log in to RSVP</label>
            <button>Login</button>
        </form>
    <%end%>


 </section>